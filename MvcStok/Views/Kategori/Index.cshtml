@using MvcStok.Models.Entity
@model List<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class=" table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach(var kgtr in Model) 
        {
            <tr>
                <th>@kgtr.KATEGORIID</th>
                <td>@kgtr.KATEGORIAD</td>
                <th><a href="/KATEGORI/SIL/@kgtr.KATEGORIID" class="btn btn-danger">SİL</a></th>
                <th><a href="/KATEGORI/GUNCELLE/@kgtr.KATEGORIID" class="btn btn-success">GÜNCELLE</a></th>

            </tr>
        }

    </tbody>
</table>

<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
