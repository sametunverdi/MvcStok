@using MvcStok.Models.Entity
@model List<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>@Resources.Labels.ProductId
        </th>
        <th>@Resources.Labels.ProductName</th>
        <th>@Resources.Labels.Brand</th>
        <th>@Resources.Labels.CategoryName</th>
        <th>@Resources.Labels.Price</th>
        <th>@Resources.Labels.Stock</th>
        <th>@Resources.Labels.Delete</th>
        <th>@Resources.Labels.Update</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.URUNID
                    
                </th>
                <td>@urn.URUNAD</td>
                <td>@urn.MARKA</td>
                <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                <td>@urn.FIYAT</td>
                <td>@urn.STOK</td>
                <th>
                    <a href="/URUN/SIL/@urn.URUNID" class="btn btn-danger">
                        @ViewBag.Delete
                    </a>
                </th>
                <th>
                    <a href="/URUN/GUNCELLE/@urn.URUNID" class="btn btn-success">
                        @ViewBag.Update
                    </a>
                </th>
            </tr>
        }
    </tbody>
</table>

<a href="/URUN/UrunEkle/" class="btn btn-primary">
    @ViewBag.NewProduct
</a>
