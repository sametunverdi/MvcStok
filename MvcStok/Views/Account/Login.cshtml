@{
    Layout = null; // Bu sayfa layout kullanmayacak
}

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@((string)System.Web.HttpContext.GetGlobalResourceObject("Labels","LoginButton"))</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        body {
            background-image: url('https://via.placeholder.com/1920x1080');
            background-size: cover;
            background-position: center;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
        }

        .login-container {
            background: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            max-width: 400px;
            width: 100%;
        }

        .form-group label {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .form-control {
            border-radius: 25px;
            padding: 12px;
            font-size: 1em;
        }

        .btn {
            border-radius: 25px;
            padding: 10px 20px;
            font-size: 1.2em;
            background-color: #5cb85c;
            border: none;
            width: 100%;
        }

            .btn:hover {
                background-color: #4cae4c;
            }

        .alert-danger {
            font-size: 1.1em;
            padding: 10px;
        }

        .language-selector {
            margin-top: 15px;
            text-align: center;
        }

            .language-selector a {
                color: #ddd;
                font-size: 1em;
                margin: 0 10px;
                text-decoration: none;
            }

                .language-selector a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-container">
        <h2 class="text-center">@((string)System.Web.HttpContext.GetGlobalResourceObject("Labels","LoginButton"))</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @((string)System.Web.HttpContext.GetGlobalResourceObject("Labels","InvalidLogin"))
            </div>
        }

        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label for="kullaniciAdi" class="col-sm-12">
                    @((string)System.Web.HttpContext.GetGlobalResourceObject("Labels","Username")):
                </label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" id="kullaniciAdi" name="kullaniciAdi" required />
                </div>
            </div>

            <div class="form-group">
                <label for="sifre" class="col-sm-12">
                    @((string)System.Web.HttpContext.GetGlobalResourceObject("Labels","Password")):
                </label>
                <div class="col-sm-12">
                    <input type="password" class="form-control" id="sifre" name="sifre" required />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn">
                    @((string)System.Web.HttpContext.GetGlobalResourceObject("Labels","LoginButton"))
                </button>
            </div>
        </form>

        <!-- Dil Seçme Butonları -->
        <div class="language-selector">
            <a href="@Url.Action("ChangeLanguage","Account", new { language = "tr" })">🇹🇷 Türkçe</a> |
            <a href="@Url.Action("ChangeLanguage","Account", new { language = "en" })">🇬🇧 English</a>
        </div>
    </div>

</body>
</html>
